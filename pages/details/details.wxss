/* pages/details/details.wxss */

/* pages/search/search.wxss */

/* @import '../../compont/header/header.wxss'; */
@import '../../compont/star/star.wxss';

.list {
  padding: 20rpx;
}

.content {
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.title {
  font-size: 1.3rem;
  font-weight: 800;
}

.pic {
  width: 200rpx;
  height: 286rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #ccc;
}

.list_body {
  font-size: 0.7rem;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.details {
  font-size: 0.7rem;
  color: rgba(0, 0, 0, 0.6);
}

.details text {
  margin-right: 5rpx;
}

.line {
  margin: 0 10rpx 0 5rpx;
}

.avg {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.avg>text:first-child {
  margin-right: 20rpx;
}

.avg>text:last-child {
  color: rgba(0, 0, 0, 0.6);
  font-size: 0.5rem;
}

.summary text {
  font-size: 0.75rem;
}

.nav {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.scroll-x {
  display: flex;
  flex-direction: row;
}

.scroll-x>view {
  display: flex;
  flex-direction: column;
  font-size: 0.7rem;
  margin-right: 4%;
  width: 100px;
  height: 187px;
}

.scroll-x .title {
  margin-top: 20rpx;
  font-size: 0.6rem;
   color: rgba(0, 0, 0, 0.6);
}

.pics {
  width: 70px;
  height: 100px;
  border-radius: 10rpx;
}
