.header {
  background-color: #42bd56;
  padding: 20rpx 0;
}

.search {
  height: 50rpx;
  line-height: 50rpx;
  border: 1px solid #ccc;
  width: 94%;
  margin: 0 auto;
  border-radius: 10rpx;
  color: #ccc;
  font-size: 0.8rem;
  background-color: #fff;
  position: relative;
}

.search image {
  position: absolute;
  left: 0;
  top:10rpx;
  margin-right: 15rpx;
  height: 30rpx;
  width: 30rpx;
  vertical-align: middle;
}
.search input{
  margin-left: 40rpx;
  color: #000;
}
